<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <space.liberion.meetandsports.widgets.ImageTextButton
            android:id="@+id/book_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:chosen="true"
            android:onClick="changeFragment"
            app:imageSrc="@drawable/court"
            app:text="球场" />
        <space.liberion.meetandsports.widgets.ImageTextButton
            android:id="@+id/appointment_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="changeFragment"
            app:imageSrc="@drawable/friends"
            app:text="约球" />
        <space.liberion.meetandsports.widgets.ImageTextButton
            android:id="@+id/ticket_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="changeFragment"
            app:imageSrc="@drawable/ticket"
            app:text="球票" />
        <space.liberion.meetandsports.widgets.ImageTextButton
            android:id="@+id/settings_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="changeFragment"
            app:imageSrc="@drawable/settings"
            app:text="设置" />
    </LinearLayout>
</LinearLayout>
